@model List<InventoryManagement.Models.Product>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <style>
        /* Global styles */
        body {
            font-family: Arial, sans-serif;
            background-color: rgb(245, 247, 248);
            margin: 0;
            padding: 20px;
        }

        /* Heading styles */
        h1 {
            color: rgb(69, 71, 75);
            margin-bottom: 20px;
            text-align: center;
        }

        /* Form styles */
        form {
            margin-bottom: 20px;
            text-align: center;
        }

        input[type="text"], input[type="submit"] {
            padding: 10px;
            font-size: 14px;
            border: 1px solid rgb(69, 71, 75);
            border-radius: 4px;
            margin-right: 10px;
        }

        input[type="submit"] {
            background-color: rgb(244, 206, 20);
            border: none;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover {
                background-color: rgb(235, 183, 0);
            }

        /* Link styles */
        a {
            text-decoration: none;
            color: rgb(55, 151, 119);
            padding: 6px 12px;
            border-radius: 4px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            a:hover {
                background-color: rgb(55, 171, 139);
                color: white;
            }

        /* Table styles */
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid rgb(69, 71, 75);
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: rgb(244, 206, 20);
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: rgb(245, 247, 248);
        }

        tr:hover {
            background-color: rgb(244, 206, 20);
            color: white;
        }
    </style>
</head>
<body>
    <h1>List Of Products</h1>

    @* <form method="post" action="/Products/Index">
        <input type="text" name="productname" placeholder="Enter product name..." />
        <input type="submit" value="Search" />
    </form> *@

    <a href="/Products/Create">Create New Product</a>

    <table>
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Stock Level</th>
                <th>Details</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.StockLevel</td>
                    <td><a href="/Products/Details/@product.ProductId">Detail</a></td>
                    <td><a href="/Products/Edit/@product.ProductId">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
